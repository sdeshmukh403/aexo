<% include ../partials/nav.ejs %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

 
  </div>
  <div class="containers">
    <div class="row">
      <div class="col-10">
        <h3>User List</h3>
      </div>
    </div>
    <div class="col-10 row" style="margin-left:20px">
        <form class="forms-sample col-9 row"  action="/user-list">       
          <div class="form-group col-8">
          <input type="text" class="form-control" style="border:1px solid gray" id="search" name="search" placeholder="Search by firstname">
          </div>    
          <div class="form-group col-2">            
              <button  type="submit" class="btn btn-primary" >Search</button>
          </div>
        </form>
      </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Firstname</th>
          <th scope="col">Lastname</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile No</th>
          <th scope="col">Address</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>

        <% if (typeof users !="undefined" && users != null) { %>
          <% for(let user of users) { %>
            <tr>
              <th scope="row">
                <%= user.id %>
              </th>
              <td>
                <%= user.firstname %>
              </td>
              <td>
                <%= user.lastname %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.mobile_no %>
              </td>
              <td>
                <%= user.address %>
              </td>
              <td> <button class="btn"><i class="fa fa-edit" data-toggle="modal" data-target="#exampleModal"
                    data-id=<%=user.id %>></i></button>
              </td>
            </tr>
            <% } } %>
      </tbody>
    </table>
  </div>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update User</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <span class="msg"></span>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Firstname:</label>
            <input type="text" class="form-control" id="firstname" name="firstname">
            <input type="hidden" id="id" value="2">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Lastname:</label>
            <input type="text" class="form-control" id="lastname" name="lastname">
            <input type="hidden" id="id">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Email:</label>
            <input type="text" class="form-control" id="email" name="email">
            <input type="hidden" id="id">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Mobile No:</label>
            <input type="text" class="form-control" id="mobile_no" name="mobile_no">
            <input type="hidden" id="id">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Address:</label>
            <textarea type="text" class="form-control" id="address" name="address"></textarea>
            <input type="hidden" id="id">
          </div>
        
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-dark submit">Update</button>
        </div>
      </div>
    </div>
  </div>
  </body>

  <div class="alert" role="alert" id="result"></div>
  <% if (pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
        <% } else { %>
            <li><a href="/user-list/1">First</a></li>
        <% } %>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
                <li class="active"><a><%= i %></a></li>
            <% } else { %>
                <li><a href="/user-list/<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
        <% } %>
        <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
        <% } else { %>
            <li><a href="/user-list/<%= pages %>">Last</a></li>
        <% } %>
    </ul>
<% } %>

  </html>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script>
 
    $('.submit').click(function () {
        $.ajax({
          method: "post",
          url: '/update-user/',
          data: { firstname: $('#firstname').val(), lastname: $('#lastname').val(), email: $('#email').val(), mobile_no: $('#mobile_no').val(),address: $('#address').val(), id: $('#id').val() },
          success: function (data) {
            if (data.success == false) {
              $('.msg').css('color', 'red').text(data.msg);
            } else {
              $('.msg').css('color', 'green').text(data.msg);                      
                setTimeout(()=>{
                    window.location.reload();
                },1000)
            }
          }
        });
    });


    $('.fa-edit').click(function () {

      $('.submit').addClass('fa-update');
      $.ajax({
        method: "get",
        url: "/edit-user/"+$(this).attr('data-id'),
        success: function (data) {
          $('#id').val(data.id);
          $('#firstname').val(data.firstname);
          $('#lastname').val(data.lastname);
          $('#email').val(data.email);
          $('#mobile_no').val(data.mobile_no);
          $('#address').val(data.address);
        }
      });
    });

  </script>